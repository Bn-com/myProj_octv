global proc zxcrow2crow()
{

	$sel = `ls -sl`;

	$old = `listRelatives -c -f $sel[0]`;

	$new = `listRelatives -c -f $sel[1]`;

	//print $old;

	//print $new;

	for($i=0 ; $i<30 ; $i++)
	{

		pointConstraint -offset 0 0 0 -weight 1 $old[$i] $new[$i];

		orientConstraint -offset 0 0 0 -weight 1 $old[$i] $new[$i];

	};


}