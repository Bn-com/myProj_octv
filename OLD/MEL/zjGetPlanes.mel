global proc zjGetPlanes()
{
	string $planes[] = {};
	string $obj[] = `ls -type mesh -ni`;
	for ($item in $obj)
	{
		string $res[] = `polyInfo -vertexToEdge ($item + ".vtx[0]")`;
		string $buffer[];
		clear $buffer;
		int $n = `tokenize $res[0] "      " $buffer`;

		if ($n == 5)
			$planes[size($planes)] = $item;

	}
	select -r $planes;
	pickWalk -d up;
}
