global proc zjRemoveInfluences()
{
	string $selected[]=`ls -sl`;
	string $sk[] = `ls -dag -ap -sl -type joint`;
	string $geo[] = stringArrayRemove($sk,$selected);

	if (size($geo) ==1)
	{
		for($item in $sk)
		{
			select -r $geo[0] $item ;
			RemoveInfluence;
		}
	}
	else error "Select the geometry and joints.";
}