global proc AEMcdRMDispMatTemplate( string $nodeName ){
	AEswatchDisplay $nodeName;
	editorTemplate -beginScrollLayout;

	editorTemplate -beginLayout "Common Displacement Attributes" -collapse 0;
		editorTemplate -addControl "color";
		editorTemplate -addControl "fileName";
        editorTemplate -addControl "shaderString";
		//editorTemplate -addControl "extraParameters";
		editorTemplate -callCustom "McdUpdateNew" "McdUpdateReplace" $nodeName;
	editorTemplate -endLayout;
	
    editorTemplate -suppress "caching";
    editorTemplate -suppress "nodeState";
	editorTemplate -addExtraControls;
	editorTemplate -endScrollLayout;
    
}

global proc McdUpdateNew(string $plugName){
	McdUpdateReplace($plugName);
}

global proc McdUpdateReplace(string $plugName){
	string $buffer[];
	tokenize($plugName,".",$buffer);
	string $nodeName = $buffer[0];
    
	string $parent = `setParent -q`;
    
	string $fullName = $parent+"|RMDispMatMILayout";                  //  fullName
	string $controlLayoutName = $fullName+"|RMDispMatColumn";              //  RMDispMatColumn
	string $maxInflFullName = $parent+"|RMDispMatLayout";
	
	if (! `frameLayout -exists $fullName`){
		frameLayout -label "" -collapsable false -borderVisible false RMDispMatMILayout;   // fullName
		setUITemplate -pst attributeEditorTemplate;
		columnLayout RMDispMatColumn;                         //  RMDispMatColumn
	}

	setParent $controlLayoutName;             ///////  <parent> | RMDispMatMILayout | RMDispMatColumn

	string $buttonLayoutLong = $controlLayoutName+"|buttonLayout";
	
	// Create the update weights button
	//
	if (!`rowLayout -exists $buttonLayoutLong`) {
		rowLayout -nc 3 buttonLayout;
			text -label "";
				rowColumnLayout -nc 3 
                                -cw 1 70
                                -cw 2 70
                                -cw 3 70
                                rclMiarmyRenderBtn; // rclMiarmyRenderBtn
					string $browseCmd1 = "miarmyDispMatBrowseBtn " + $nodeName;
					string $browseCmd2 = "miarmyDispMatReloadBtn " + $nodeName;
                    string $browseCmd3 = "miarmyDispMatStringBtn " + $nodeName;

					button -label "Browse"      -c $browseCmd1 lsMiarmyUpdateButton1;
					button -label "Reload"      -c $browseCmd2 lsMiarmyUpdateButton2;
                    button -label "Update RIB"	-c $browseCmd3 lsMiarmyUpdateButton3;
					
					text -label "";
				setParent ..;
			text -label "";
		setParent ..;
		
	} else {
		// Set the new node name to the button callback
		// rclMiarmyRenderBtn
		button -e -c ("miarmyDispMatBrowseBtn " + $nodeName)
                                    ($buttonLayoutLong+"|rclMiarmyRenderBtn|lsMiarmyUpdateButton1"); 
		button -e -c ("miarmyDispMatReloadBtn " + $nodeName)
                                    ($buttonLayoutLong+"|rclMiarmyRenderBtn|lsMiarmyUpdateButton2");
        button -e -c ("miarmyDispMatStringBtn " + $nodeName)
                                    ($buttonLayoutLong+"|rclMiarmyRenderBtn|lsMiarmyUpdateButton3"); 
	}
	
	setUITemplate -ppt;
	setParent $parent;
}


global proc miarmyDispMatBrowseBtn(string $nodeName){
	string $fileName;
	string $orgFileName;
	$fileName = `fileDialog -m false -dm "*.s*"`;
	if ($fileName != ""){
		$orgFileName = `getAttr ($nodeName + ".fileName")`;
		
		setAttr -type "string" ($nodeName + ".fileName") $fileName;
        
        string $pythonCmd = "McdParse3DelightRMShader('" + $nodeName + "', 2, '" + $orgFileName + "')";
        python($pythonCmd);
    }
}

global proc miarmyDispMatReloadBtn(string $nodeName){
    // python session
    
    string $pythonCmd = "McdParse3DelightRMShader('" + $nodeName + "', 2)";
    python($pythonCmd);	
}

global proc miarmyDispMatStringBtn(string $nodeName){
    // python session
    
    string $pythonCmd = "mcd_constructShaderString('" + $nodeName + "')";
    python($pythonCmd);	
}







































