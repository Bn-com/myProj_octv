//                                                                                                     //
//                                                                                                     //
//                              clamp a value within a specific range                                  //
//                                                                                                     //
//                                                                                                     //
/////////////////////////////////////////////////////////////////////////////////////////////////////////
global proc float PDD_clamp(float $min,float $max, float $value,int $warningFlag)
{
    if ($value<=$min)
    {return $min;}
    if($value >= $max)
    {return $max;}
    if ( ($min<$value)&&($value<$max))
    {
        
        return $value;
    }
    
    
}
