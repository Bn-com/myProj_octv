


global proc onSelfShadows()
{
    string $SelfShadows[]= `ls -sl`;
    for ($s in $SelfShadows)
    {
       setAttr ($s + ".aiSelfShadows") 1;
     
    }
}

global proc offSelfShadows()
{
    string $SelfShadows[]= `ls -sl`;
    for ($s in $SelfShadows)
    {
       setAttr ($s + ".aiSelfShadows") 0;
     
    }
}

