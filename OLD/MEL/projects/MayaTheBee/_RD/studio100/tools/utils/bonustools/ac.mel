											    -cat 2 "both" 0
											    -cat 3 "both" 0
											    -cal 3 "center"
											    `;

//bug: -sliderMinvalue und -sliderMaxValue scheinen nicht zu gehen
		if ($max > $min) attrFieldSliderGrp -e -min $min -max $max $attrSlider;
	}
	return {$attrSlider};
}

