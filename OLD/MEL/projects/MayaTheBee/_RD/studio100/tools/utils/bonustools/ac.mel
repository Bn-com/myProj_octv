global proc acSwapEntries( string $node, int $a, int $b)
{

	string $connectionsA[] = acGetConnections( $node, $a);
	acCopyEntry( $node, $b, $a);
	acDeletePlug( $node, $b);
	for ( $ca in $connectionsA ) acConnect( $node, $b, $ca);
}

