		for ( $s in $oldAC ) $msg += "  " + $s + "\n";
		$msg += "\nwith the \"Delete\" button below.\n";
		$win = `window -mnb 0 -mxb 0 -title "Delete old attrCollection Script Nodes" -wh 270 340 acDelOldACWin`;
			string $deleteCmd = "delete ";
