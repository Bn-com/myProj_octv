				-af		$pane	"left"		0
				-af		$pane	"right"		0
				-ac		$pane	"bottom"	10 $b1
	
				-an		$b1		"top"
				-af		$b1		"left"		5
				-af		$b1		"bottom"	5
				-ap		$b1		"right"		2 50
	
				-an		$b2		"top"
				-ap		$b2		"left"		2 50
				-af		$b2		"bottom"	5
				-af		$b2		"right"		5
			$form;
	
		showWindow;
	}
