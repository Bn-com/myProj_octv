			$form = `formLayout -nd 100`;
				$pane = `paneLayout -configuration "single"`;
					scrollField -font "boldLabelFont" -wordWrap false -text $msg -editable false;
				setParent $form;
				$b1 = `button -label "Delete" -c $deleteCmd`;
				$b2 = `button -label "Close" -c ("deleteUI " + $win)`;
	
			formLayout -edit
