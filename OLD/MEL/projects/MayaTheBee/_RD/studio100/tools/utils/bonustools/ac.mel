global proc acUnlockUI()
{
	optionVar -iv "acPrefLockUI" 0;
	string $acScriptNodes[] = acScriptNodes();
	for ( $s in $acScriptNodes ) {
		acRedrawEntry( $s);
		acRebuildMenus( $s);
	}
}

