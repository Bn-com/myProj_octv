global proc int acTypeDef( string $type)
{

// returns the typeDef integer
// 0 = window oder panel
// 1 = controlLayout
// 5 = attrControl
// 6 = buttons and icons
// 9 = text, separator etc


	global string $acTypes[];
	for ( $i=0 ; $i<size($acTypes) ; $i+=3 ) {
		if ($acTypes[$i] == $type) return (int)$acTypes[$i+1];
	}
	return -1;
}

