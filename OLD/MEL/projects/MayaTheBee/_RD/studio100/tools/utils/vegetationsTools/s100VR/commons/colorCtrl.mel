
global proc s100color(string $color, string $objet)
{
int $col;
/*
green 0
yellow 1
red 2
blue 3

*/

switch ($color) {

 case "green":

int $col = 23;

 break;
 case "yellow":


int $col = 17;


 break;

 case "red":

int $col = 13;


 break;

 case "blue":

int $col = 6;



 break;

  case "light":

int $col = 22;



 break;


}

setAttr ($objet + ".overrideColor") $col;
setAttr ($objet + ".overrideEnabled") 1;

}
