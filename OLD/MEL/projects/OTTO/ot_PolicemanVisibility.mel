global proc PolicemanVisibility()
{
	string $objs[]= `ls -g -tr -o`;
	for ($obj in $objs)
	{
		if(`match "Policeman" $obj` !="")
		{
			string $V=$obj +".visibility";
			string $con[]=`listConnections  $V`;
			if(size($con)>0)
			{
				string $c=$con[0]+".output";
				if(`objExists $c`)
				{
					disconnectAttr $c $V;
				}
			}
			setAttr $V 1; 
		}
	}
}
PolicemanVisibility;