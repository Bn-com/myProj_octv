global proc eyeBallSwitchEdit()
{
string $d = `confirmDialog -title"警告" -message"请不要按 确认 键"
                               -button"确认" -button"确认" 
                                -defaultButton"确认" -cancelButton"取消" -dismissString "取消"`;
     if($d=="确认")
       { error "报错了吧！";  }
     if($d=="取消")
       { error "取消也报错！";  }
}


