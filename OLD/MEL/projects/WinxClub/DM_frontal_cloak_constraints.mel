/////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////// 	///////// 	This MEL provides to create a Component To Component nConstraints///////// 	to close the frontal part of Winxs cloaks during simulation.///////// 	New nConstraints will be parented to its relative "nCloth_constraints_rigids" groups///////// 	and related to a new selection set named "CLOAK_closer".//////////////////	How To Use://///////	- 	Select a Winx Cloak Character;/////////	-	Run MEL;///////// 	//////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////	//////// Selection Checker  ////////proc C2C_nConstraint(){		//////// Select First Selected Object  ////////	string $selectFirstOnly[] = `ls -sl -fl`;	select $selectFirstOnly[0];		//////// Check Name Space In Selection ////////		string $selns[] = `ls -sl -fl`;	string $elements[];	int $i = 0;	string $buffer[];	for ($elem in $selns)	{		tokenize $elem ":" $buffer;		$elements[$i] = $buffer[0];		print ($buffer[0]);		$i++;	}		//////// Select Vertices To Constraint In Component To Component Mode  ////////	select ($buffer[0] + ":" + "lower_body_cloth");	showHidden -a;			string $objectBaseName = "lower_body_cloth";			int $numArray[] = {76, 77, 78, 82, 84, 85, 86, 89, 108, 116, 130, 152, 153, 175, 176, 198, 199, 219, 220, 240, 241, 261, 262, 282, 283, 303, 304, 324, 368, 389};		select -cl;		for ($num in $numArray)		{			select -add ($buffer[0] + ":" +  $objectBaseName + ".vtx[" + $num + "]");		}		//////// Create Component To Component nConstraint From Selected Vertices  ////////	createNConstraint pointToPoint 0;	//////// Parent C2C nConstraint To Character Group  ////////	pickWalk -d up;	string $selectedC2C[] = `ls -sl`;	rename $selectedC2C[0] ($buffer[0] + ":" + "dc_cloak_closer_c2c");	string $selectedC2C[] = `ls -sl`;	parent $selectedC2C ($buffer[0] + ":" + "nCloth_constraints_rigids");		$createSetResult = `sets -name ($buffer[0] + ":" + "CLOAK_closer")`;	HideSelectedObjects;};global proc DM_frontal_cloak_constraints(){	string $checkselection[] = `ls -sl`;	if ($checkselection[0] == "")	{		warning "Select A Winx Cloak!";	}	else	{		C2C_nConstraint();	}}