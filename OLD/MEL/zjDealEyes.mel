global proc zjDealEyes()
{
	string $eyes[] = `ls -dagObjects -type shape -noIntermediate "*_?_lo_lens"`;
	for ($item in $eyes)
	{
		setAttr ($item + ".castsShadows") 0;
		setAttr ($item + ".receiveShadows") 0;
	}
}
