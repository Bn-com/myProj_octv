		-columnAttach 1 "both" 0 -columnAttach 2 "left" 5
		-columnWidth 1 270 -columnWidth 2 100
		-enable true
		-visible false textureUVTilingProxyQualityLayout;
		attrEnumOptionMenuGrp
			-label (uiRes("m_AEfileTemplate.kUvTilingProxyQuality"))
