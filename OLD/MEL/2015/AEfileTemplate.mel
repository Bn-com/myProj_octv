}

global proc AEfileTextureRenameCmd (string $ftn)
{
    string $currFile = `getAttr $ftn`;
	if ($currFile == "")
		return;

    string $buffer[];
    int $numTokens;
    $numTokens = `tokenize $currFile "/" $buffer`;
	if($numTokens < 2)
	{
		warning( (uiRes("m_AEfileTemplate.kCancelRename")));
		return;
	}
	string $nodeNames[];
	tokenize($ftn, ".", $nodeNames);
	string $node = $nodeNames[0];

	string $computedName = $buffer[($numTokens - 1)];

	string $matchName = $computedName ;
	// for UV tiling Mode of Mudbox and ZBrush
	string $specialReg[] = {"u<u>", "u<U>", "v<v>", "v<V>"};
	for ($regex in $specialReg)
		$matchName = `substitute $regex $matchName (substring($regex, 1, 1))`;

	$matchName = formValidFileNodeName($matchName);

	if(!isLockChangedName($node,$matchName))
	{
		string $newName = getNewName($matchName);
		string $result = `rename $node $newName`;
		string $warn = (uiRes("m_AEfileTemplate.kLockFileNameWarn"));
		warning(`format -s $result $warn`);
	}
}

global proc int isLockChangedName(string $nodeName, string $matchName)
{
	string $result = substring($nodeName, 1, size($matchName));
	if($result == $matchName)
		return 1;
	return 0;
}

global proc string getNewName(string $matchName)
{
	if(!`objExists $matchName`)
	{
		return $matchName;
	}
	int $number = 1;
	string $result = "";
	$result = $matchName + "_" + $number;
	while(`objExists $result`)
	{
		$number += 1;
		$result = $matchName + "_" + $number;
	}
	return $result;
}

