global proc zjFreezeGlow()
{
	string $glows[] = stringArrayCatenate(`ls "*.glowIntensity"`,`ls "*:*.glowIntensity"`);
	$glows = stringArrayRemoveDuplicates($glows);
	for ($item in $glows)
		setAttr $item 0;
}