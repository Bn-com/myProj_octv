global proc zwSelectByVertex(int $count)
{
	select -clear;

	string $buf[] = `ls -long -noIntermediate -type "mesh" "amallsdiamonds_c_hi_geo_*"`;
	for ($shape in $buf)
	{
		int $v[] = `polyEvaluate -vertex $shape`;
		if ($v[0] == $count)
		{
			string $parent[] = `listRelatives -fullPath -parent $shape`;
			select -add $parent[0];
		}
	}
}