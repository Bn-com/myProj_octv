global proc int zwVertexCount()
{
	string $buf[] = `ls -long -noIntermediate -type "mesh"`;
	if (`size $buf`)
	{
		int $verts[] = `polyEvaluate -vertex $buf`;
		return $verts[0];
	}
	return 0;
}